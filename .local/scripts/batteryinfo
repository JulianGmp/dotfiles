#!/bin/sh

capacity=$(cat /sys/class/power_supply/BAT0/capacity)
status=$(cat /sys/class/power_supply/BAT0/status)
prog=$(charprog braille "$capacity")

case $(echo "$status" | tr '[:upper:]' '[:lower:]') in
	"full")
		symbol="ðŸ”Œ" ;;
	"discharging")
		symbol="ðŸ”‹" ;;
	"charging")
		symbol="âš¡" ;;
	*)
		symbol=" ($status)" ;;
esac

printf '%s' "${symbol} ${prog} ${capacity} %"

